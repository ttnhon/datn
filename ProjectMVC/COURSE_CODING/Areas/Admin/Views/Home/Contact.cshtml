@model COURSE_CODING.Models.EmailModel
@{
    ViewBag.Title = "Contact";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<script src="~/Areas/Admin/Script/Alert.js"></script>
@using (Html.BeginForm("SendMail", "Home", FormMethod.Post))
{
    @*@Html.AntiForgeryToken()*@
    <div class="main">
        <div class="content">
            <div class="section group">
                <div class="col span_2_of_3">
                    <div class="contact-form">
                        <div id="status_view">
                            @if (TempData["AlertMessage"] != null)
                            {
                                <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                                    @TempData["AlertMessage"]
                                </div>
                            }
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="form-row">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-7">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-row ">
                                @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-7" style="margin-top:4px;!important">
                                    @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control pt-1", @style = "margin-top:4px;!important" } })
                                    @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-row pt-1">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3", @style = "margin-top:4px;!important" })
                                <div class="col-md-7" style="margin-top:4px;!important">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control pt-1" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-row pt-1">
                                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-3", @style = "margin-top:4px;!important" })
                                <div class="col-md-7 " style="margin-top:4px;!important">
                                    @Html.TextAreaFor(model => model.Content, 4, 79, new { htmlAttributes = new { @class = "form-control pt-1", @style = "margin-top:4px;!important;border-radius:5px;!important" } })
                                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-row pt-1">
                                <div class="col-md-3"></div>
                                <div class="col-md-8 offset-5">
                                    <input type="submit" value="Send mail" class="btn btn-primary" style="margin-top:4px;!important;margin-bottom:4px;!important" />
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}





@{
    ViewBag.Title = "ComfirmRequest";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
@model PagedList.IPagedList<DAO.EF.USER_INFO>
@using PagedList.Mvc;

<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                List user
                @if (ViewBag.Success != null)
                {<div class="alert alert-success">@ViewBag.Success</div>}
            else
            {
            }
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("ComfirmRequest", "Home", FormMethod.Get))
                {
                    <div class="row mb-4" style="{margin-bot}">
                        <div class="col-lg-12 ">
                            <div class="col-md-offset-0">
                                <input type="text" name="searchString" style="border-radius:35px!important" />
                                <input type="submit" value="Search" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                    <div class="row"></div>
                    <div class="row"></div>
                    <div class="table-responsive ">
                        @*<table class="table table-striped table-bordered table-hover mt-3">*@
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th class="align-content-center justify-content-center text-center">User name</th>
                                    <th class="align-content-center text-center">Created Date</th>
                                    <th class="align-content-center text-center">Role</th>
                                    <th class="align-content-center text-center">Confirm request</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID">

                                        <td class="text-center">@item.UserName</td>
                                        <td class="text-center">@item.CreateDate</td>
                                        @if (item.RoleUser.Equals(0))
                                        {
                                            <td class="text-center">Member</td>
                                        }
                                        else if (item.RoleUser.Equals(1))
                                        {
                                            <td class="text-center">Moderator</td>
                                        }
                                        else if (item.RoleUser.Equals(2))
                                        {
                                            <td class="text-center">Admin</td>
                                        }
                                        else
                                        {
                                            <td class="text-center">Other</td>
                                        }
                                        <td class="text-center">
                                            @Ajax.ActionLink("Accept", "Accept", "Home", new { @id = item.ID }, new AjaxOptions
                                            {
                                                Confirm = "Are you sure accept that!!",
                                                HttpMethod = "Delete",
                                                OnComplete = "$('#row_" + @item.ID + "').remove()",

                                            })

                                            @Ajax.ActionLink("Deny", "Deny", "Home", new { @id = item.ID }, new AjaxOptions
                                            {
                                                Confirm = "Are you sure deny that!!",
                                                HttpMethod = "Delete",
                                                OnComplete = "$('#row_" + @item.ID + "').remove()",

                                            })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)of @Model.PageCount
                               
                        @Html.PagedListPager(Model, Page => Url.Action("ComfirmRequest", new { page = Page, @searchString = ViewBag.ChuoiTimKiem }))


                    </div>
                }
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>



@model PagedList.IPagedList<DAO.EF.USER_INFO>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách người dùng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "User", FormMethod.Get))
                {
                    <div class="row mb-4">
                        <div class="col-lg-12 ">
                            <div class="col-md-offset-0">
                                <input type="text" name="searchString" />
                                <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
                                @Html.ActionLink("Create account", "Create", null, htmlAttributes: new { @class = "btn btn-primary ml-2" })
                            </div>
                        </div>
                    </div>

                <div class="table-responsive ">
                    <table class="table table-striped table-bordered table-hover mt-3">
                        <thead>
                            <tr>
                                <th>User name</th>
                                <th>Email</th>
                                <th>Country</th>
                                <th>Status</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">

                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>@item.Country</td>
                                    <td>

                                        <a href="#" class="updateStatus" data-id="@item.ID" id="user_@item.ID" >
                                            @if (item.StatusUser == 1)
                                            {
                                                <span>unlock</span>
                                            }
                                            else
                                            {
                                                <span>lock</span>
                                            }
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/User/Edit/@item.ID">Sửa</a>

                                        @Ajax.ActionLink("Xóa", "Delete", "User", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Are you sure delete that!!",
                                       HttpMethod = "Delete",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",

                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)of @Model.PageCount
                    @Html.PagedListPager(Model, Page => Url.Action("Index", new { page = Page, @searchString = ViewBag.ChuoiTimKiem }))


                </div>
                }
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>


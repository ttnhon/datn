
@model PagedList.IPagedList<DAO.EF.USER_INFO>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                List user
                @if (ViewBag.Success != null)
    {<div class="alert alert-success">@ViewBag.Success</div>}
else{
                }
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "User", FormMethod.Get))
    {
            <div class="row mb-4" style="{margin-bot}">
                <div class="col-lg-12 " >
                    <div class="col-md-offset-0">
                        <input type="text" name="searchString" style="border-radius:35px!important" />
                        <input type="submit" value="Search" class="btn btn-primary" />
                        @Html.ActionLink("Create account", "Create", null, htmlAttributes: new { @class = "btn btn-primary ml-2" })
                        @Html.ActionLink("Back to list", "Index", null, htmlAttributes: new { @class = "btn btn-primary ml-2" })
                    </div>
                </div>
            </div>
            <div class="row"></div>
            <div class="row"></div>
            <div class="table-responsive ">
                @*<table class="table table-striped table-bordered table-hover mt-3">*@
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th class="align-content-center justify-content-center text-center">User name</th>
                            <th class="align-content-center text-center">Created Date</th>
                            <th class="align-content-center text-center">Country</th>
                            <th class="align-content-center text-center">Status</th>
                            <th class="align-content-center text-center">Role</th>
                            <th class="align-content-center text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
            {
                <tr id="row_@item.ID">

                    <td class="text-center">@item.UserName</td>
                    <td class="text-center">@item.CreateDate</td>
                    <td class="text-center">@item.Country</td>
                    <td class="text-center">

                        <a class="text-center" href="#" class="updateStatus" data-id="@item.ID" id="user_@item.ID">
                            @if (item.StatusUser == 1)
                {
                    <span>unlock</span>
    }
    else
    {
            <span class="text-center">lock</span>
}
                        </a>
                    </td>

                    @if (item.RoleUser.Equals(0))
        {
            <td class="text-center">Member</td>
}
else if (item.RoleUser.Equals(1))
{
            <td class="text-center">Moderator</td>
}
else if (item.RoleUser.Equals(2))
{
            <td class="text-center">Admin</td>
}
else
{
            <td class="text-center">Other</td>
}
                    <td class="text-center">
                        <a class="text-center" href="/admin/User/Edit/@item.ID">Edit</a>

                        @Ajax.ActionLink("Delete", "Delete", "User", new { @id = item.ID }, new AjaxOptions
            {
                Confirm = "Are you sure delete that!!",
                HttpMethod = "Delete",
                OnComplete = "$('#row_" + @item.ID + "').remove()",

            })
                    </td>
                </tr>
}
                    </tbody>
                </table>
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)of @Model.PageCount
                @Html.PagedListPager(Model, Page => Url.Action("Index", new { page = Page, @searchString = ViewBag.ChuoiTimKiem }))


            </div>
}
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>


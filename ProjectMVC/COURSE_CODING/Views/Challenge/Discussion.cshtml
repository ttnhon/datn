@model COURSE_CODING.Models.CommentListModel

@{
    ViewBag.Title = "Discussion";
    Layout = "~/Views/Shared/_User_Layout.cshtml";
}

@section CustomCSS
{
    <link rel="stylesheet" href="~/Assets/Public/css/challenge.css" type="text/css">

    <link rel="stylesheet" href="~/Assets/Public/css/discussion.css" type="text/css">

    <link href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
}

<div class="content">

    <!--Header Section-->
    <div class="header">
        <div class="container">

            <!--Breadcrumb-->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">Pactice</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">C++</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Introduction</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Challenge Title
                    </li>
                </ol>
            </nav>

            <!--Title-->
            <h1 class="header-title">
                Challenge Title
                <input type="checkbox" id="star-toggle">
                <label for="star-toggle">
                    <i class="far fa-star"></i>
                </label>
            </h1>

            <!--Account Detail-->
            <div class="header-progress">
                <div class="account">
                    <div class="point-wrap">
                        <span class="point">10 more points</span>
                        to get your first star!
                    </div>

                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="25" aria-valuemin="0"
                             aria-valuemax="100"></div>
                    </div>

                    <div class="score-info">
                        <span class="current-rank">
                            Rank:
                            <span class="value">400166</span>
                        </span>
                        <span>|</span>
                        <span class="current-ponts">
                            Points:
                            <span class="value">0/10</span>
                        </span>
                        <a class="scoring-link" href="#">
                            <i class="fas fa-exclamation-circle"></i>
                        </a>
                    </div>
                </div>

                <div class="badge-wrap">
                    <div class="badge-icon">
                        <img src="/res/cpp-739b350881.svg" alt="badge-icon">
                        <span class="badge-title">cpp</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Body Section-->
    <div class="container">
        <div class="content-body">

            <!--Tab Bar-->
            <div class="tab-wrap">
                <nav class="navbar navbar-light">
                    <ul class="nav nav-tabs tabs-bar" style="margin-bottom: 0;">
                        <li class="nav-item"><a id="js-problem" class="nav-link" href="#">Problem</a></li>
                        <li class="nav-item"><a id="js-submission" class="nav-link" href="#">Submissions</a></li>
                        <li class="nav-item"><a id="js-ldboard" class="nav-link" href="#">Leaderboard</a></li>
                        <li class="nav-item active">
                            <a id="js-discussion" class="nav-link" href="#">Discussions</a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!--Challenge Interface-->
            <div class="challenge-interface">
                <div class="discussion">
                    <div class="discussion__sort">
                        <p>Sort @Model.comments.Count discussions, By:</p>
                        <select name="discussion_sort" id="discussion_sort">
                            <option value="1">recency</option>
                            <option value="2">votes</option>
                        </select>
                    </div>
                    <hr>
                    <div class="discussion__input">
                        <img class="discussion__avatar"
                             src="~/Assets/Public/images/profile_photos/@Model.Info.PhotoURL" alt="Profile Picture">
                        @using (Html.BeginForm("AddComment","Challenge",FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model=>model.Info.ID)
                            @Html.HiddenFor(model=>model.challenge.ID)
                            @Html.TextArea("comment_input", new { @class = "discussion__text", @id = "comment_input", @rows = "6"})
                            <textarea class="discussion__text" name="comment_input" id="comment_input"
                                      rows="6"></textarea>
                            <button class="btn btn-primary" type="submit">Post Comment</button>
                        }
                    </div>

                    <div class="discussion-group">
                        <ul class="comments">
                            @if (Model.comments.Count > 0)
                            {
                                foreach (var comment in Model.comments)
                                {
                                    <li class="comment">
                                        <img class="discussion__avatar"
                                             src="~/Assets/Public/images/profile_photos/@comment.owner.PhotoURL"
                                             alt="Profile Picture">
                                        <div class="comment__detail">
                                            <a href="#">@comment.owner.UserName</a>
                                            <i class="far fa-clock">
                                                <span>@comment.comment.CreateDate years ago</span>
                                            </i>
                                            <p>@comment.comment.Text</p>
                                        </div>
                                        <div class="comment__footer">
                                            <i class="fas fa-thumbs-up comment__likes">
                                                <span>@comment.comment.Likes</span>
                                            </i>
                                            <a href="#">Like</a>
                                            <span>-</span>
                                            <a href="#">Reply</a>
                                        </div>
                                        <ul class="replies">
                                            @if (comment.replies.Count > 0)
                                            {
                                                foreach (var reply in comment.replies)
                                                {
                                                    <li class="comment">
                                                        <img class="discussion__avatar"
                                                             src="~/Assets/Public/images/profile_photos/@reply.owner.PhotoURL"
                                                             alt="Profile Picture">
                                                        <div class="comment__detail">
                                                            <a href="#">@reply.owner.UserName</a>
                                                            <i class="far fa-clock">
                                                                <span>@reply.reply.CreateDate years ago</span>
                                                            </i>
                                                            <p>@reply.reply.Text</p>
                                                        </div>
                                                        <div class="comment__footer">
                                                            <i class="fas fa-thumbs-up comment__likes">
                                                                <span>@reply.reply.Likes</span>
                                                            </i>
                                                            <a href="#">Like</a>
                                                            <span>-</span>
                                                            <a href="#">Reply</a>
                                                        </div>
                                                    </li>
                                                }
                                            }
                                            <li>
                                                <div class="discussion__input">
                                                    <img class="discussion__avatar"
                                                         src="~/Assets/Public/images/profile_photos/@Model.Info.PhotoURL" alt="Profile Picture">
                                                    @using (Html.BeginForm("AddComment", "Challenge", FormMethod.Post))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        @Html.ValidationSummary(true)
                                                        @Html.HiddenFor(model => model.Info.ID)
                                                        @Html.HiddenFor(model => model.challenge.ID)
                                                        @Html.HiddenFor(model => comment.comment.ID)
                                                        @Html.TextArea("comment_input", new { @class = "discussion__text", @id = "comment_input", @rows = "6" })
                                                        <textarea class="discussion__text" name="comment_input" id="comment_input"
                                                                  rows="6"></textarea>
                                                        <button class="btn btn-primary" type="submit">Post Comment</button>
                                                    }
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                }
                            }

                            <li class="comment">
                                <img class="discussion__avatar"
                                     src="/res/13151438_1694488630768857_5430165903041365933_n.png"
                                     alt="Profile Picture">
                                <div class="comment__detail">
                                    <a href="#">AAAAAAAAA</a>
                                    <i class="far fa-clock">
                                        <span>3 years ago</span>
                                    </i>
                                    <p>bai nay de vcl</p>
                                </div>
                                <div class="comment__footer">
                                    <i class="fas fa-thumbs-up comment__likes">
                                        <span>100</span>
                                    </i>
                                    <a href="#">Like</a>
                                    <span>-</span>
                                    <a href="#">Reply</a>
                                </div>
                                <ul class="replies">
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-angle-double-down">Show 6 replies</i>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!--Right Panel-->
            <div class="right-panel">
                <div class="sidebar-difficulty-help">
                    <h2>need help?</h2>
                    <hr>
                    <div style="margin-bottom:20px;">

                        <div class="help-link">
                            <a href="#">
                                <i class="far fa-user"></i>
                                <span>View editorial</span>
                            </a>
                        </div>
                        <div class="help-link">
                            <a href="#">
                                <i class="fas fa-trophy"></i>
                                <span>View top submissions</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


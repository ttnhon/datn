                <nav class="navbar navbar-light">
                    <ul class="nav nav-tabs tabs-bar" style="margin-bottom: 0;">
                        <li class="nav-item"><a id="js-problem" class="nav-link" href=@(ViewBag.competeID == null ? "/Challenge/"+Model.challenge.ID+"/problem" : "/Compete/" + ViewBag.competeID + "/Challenge/"+Model.challenge.ID+"/problem")>Problem</a></li>
                        <li class="nav-item active">
                            <a id="js-discussion" class="nav-link" href="#">Discussions</a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!--Challenge Interface-->
            <div class="challenge-interface">
                <div class="discussion">
                    <div class="discussion__sort">
                        <p>Sort @Model.comments.Count discussions, By:</p>
                        <select name="discussion_sort" id="discussion_sort">
                            <option value="1">recency</option>
                            <option value="2" selected>votes</option>
                        </select>
                    </div>
                    <hr>
                    <div class="discussion__input">
                        <img class="discussion__avatar" id="current_avatar"
                             src="~/Assets/Public/images/profile_photos/@Model.Info.PhotoURL" alt="Profile Picture"
                             onerror="this.src='http://www.iconninja.com/files/155/832/15/business-human-seo-person-user-account-profile-icon.svg'">
                        <textarea class="discussion__text" name="comment_input" id="comment_input"
                                  rows="6"></textarea>
                        <button class="btn btn-primary" id="submit_comment" onclick="addComment()">Post Comment</button>
                    </div>

                    <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div>
                    </div>
                    <div class="discussion-group">

@model COURSE_CODING.Models.CommentListModel

@{
    ViewBag.Title = "Discussion";
    Layout = "~/Views/Shared/_User_Layout.cshtml";
}

@section CustomCSS
{
    @Styles.Render("~/Assets/Public/css/challenge.css")
    @Styles.Render("~/Assets/Public/css/discussion.css")

    <link href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
}

<div class="content">

    <!--Header Section-->
    <div class="header">
        <div class="container">

            <!--Breadcrumb-->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">Pactice</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">C++</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Introduction</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        @Model.challenge.Title
                    </li>
                </ol>
            </nav>

            <!--Title-->
            <h1 class="header-title">
                @Model.challenge.Title
                <input type="checkbox" id="star-toggle">
                <label for="star-toggle">
                    <i class="far fa-star"></i>
                </label>
            </h1>

            <!--Account Detail-->
            <div class="header-progress">
                <div class="account">
                    <div class="point-wrap">
                        <span class="point">10 more points</span>
                        to get your first star!
                    </div>

                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="25" aria-valuemin="0"
                             aria-valuemax="100"></div>
                    </div>

                    <div class="score-info">
                        <span class="current-rank">
                            Rank:
                            <span class="value">400166</span>
                        </span>
                        <span>|</span>
                        <span class="current-ponts">
                            Points:
                            <span class="value">0/10</span>
                        </span>
                        <a class="scoring-link" href="#">
                            <i class="fas fa-exclamation-circle"></i>
                        </a>
                    </div>
                </div>

                <div class="badge-wrap">
                    <div class="badge-icon">
                        <img src="/res/cpp-739b350881.svg" alt="badge-icon">
                        <span class="badge-title">cpp</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Body Section-->
    <div class="container">
        <div class="content-body">

            <!--Tab Bar-->
            <div class="tab-wrap">
                <nav class="navbar navbar-light">
                    <ul class="nav nav-tabs tabs-bar" style="margin-bottom: 0;">
                        <li class="nav-item"><a id="js-problem" class="nav-link" href="/Challenge/Problem/@Model.challenge.ID">Problem</a></li>
                        <li class="nav-item"><a id="js-submission" class="nav-link" href="#">Submissions</a></li>
                        <li class="nav-item"><a id="js-ldboard" class="nav-link" href="#">Leaderboard</a></li>
                        <li class="nav-item active">
                            <a id="js-discussion" class="nav-link" href="#">Discussions</a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!--Challenge Interface-->
            <div class="challenge-interface">
                <div class="discussion">
                    <div class="discussion__sort">
                        <p>Sort @Model.comments.Count discussions, By:</p>
                        <select name="discussion_sort" id="discussion_sort">
                            <option value="1">recency</option>
                            <option value="2" selected>votes</option>
                        </select> 
                    </div>
                    <hr>
                    <div class="discussion__input">
                        <img class="discussion__avatar" id="current_avatar"
                             src="~/Assets/Public/images/profile_photos/@Model.Info.PhotoURL" alt="Profile Picture">
                        <textarea class="discussion__text" name="comment_input" id="comment_input"
                                  rows="6"></textarea>
                        <button class="btn btn-primary" id="submit_comment" onclick="addComment()">Post Comment</button>
                    </div>
                    <div class="discussion-group">
                        <ul class="comments">
                            @if (Model.comments.Count > 0)
                            {
                                foreach (var comment in Model.comments)
                                {
                                    <li class="comment">
                                        <img class="discussion__avatar"
                                             src="~/Assets/Public/images/profile_photos/@comment.owner.PhotoURL"
                                             alt="Profile Picture">
                                        <div class="comment__detail">
                                            <div class="comment__user-info">
                                                <a href="/User/Profile/@comment.owner.ID">@comment.owner.UserName</a>
                                                <i class="far fa-clock">
                                                    <span>@comment.comment.CreateDate</span>
                                                </i>
                                            </div>
                                            <p>@comment.comment.Text</p>
                                        </div>
                                        <div class="comment__footer">
                                            <i class="fas fa-thumbs-up comment__likes">
                                                <span>@comment.comment.Likes</span>
                                            </i>
                                            <input class="like__chk" data-type="comment" data-id="@comment.comment.ID"
                                                   type="checkbox" id="cm-@comment.comment.ID" onchange="Like(this)">
                                            <label for="cm-@comment.comment.ID" class="like__label">
                                                <span>Like</span>
                                            </label>
                                            <span>-</span>
                                            <button class="reply__btn" data-id="@comment.comment.ID" onclick="ShowReplyInput(this)">Reply</button>
                                        </div>
                                        <ul class="replies" id="replies-@comment.comment.ID">
                                            @if (comment.replies.Count > 0)
                                            {
                                                foreach (var reply in comment.replies)
                                                {
                                                    <li class="comment">
                                                        <img class="discussion__avatar"
                                                             src="~/Assets/Public/images/profile_photos/@reply.owner.PhotoURL"
                                                             alt="Profile Picture">
                                                        <div class="comment__detail">
                                                            <div>
                                                                <a href="/User/Profile/@reply.owner.ID">@reply.owner.UserName</a>
                                                                <i class="far fa-clock">
                                                                    <span>@reply.reply.CreateDate</span>
                                                                </i>
                                                            </div>
                                                            <p>@reply.reply.Text</p>
                                                        </div>
                                                        <div class="comment__footer">
                                                            <i class="fas fa-thumbs-up comment__likes">
                                                                <span>@reply.reply.Likes</span>
                                                            </i>
                                                            <input class="like__chk" data-type="reply" data-id="@reply.reply.ID"
                                                                   type="checkbox" id="rpl-@reply.reply.ID" onchange="Like(this)">
                                                            <label for="rpl-@reply.reply.ID" class="like__label">
                                                                <span>Like</span>
                                                            </label>
                                                            <span>-</span>
                                                            <button class="reply__btn" data-id="@comment.comment.ID" onclick="ShowReplyInput(this)">Reply</button>
                                                        </div>
                                                    </li>
                                                }
                                            }
                                        </ul>
                                    </li>
                                }
                            }          
                        </ul>
                    </div>
                </div>
            </div>
            <!--Right Panel-->
            <div class="right-panel">
                <div class="sidebar-difficulty-help">
                    <h2>need help?</h2>
                    <hr>
                    <div style="margin-bottom:20px;">

                        <div class="help-link">
                            <a href="#">
                                <i class="far fa-user"></i>
                                <span>View editorial</span>
                            </a>
                        </div>
                        <div class="help-link">
                            <a href="#">
                                <i class="fas fa-trophy"></i>
                                <span>View top submissions</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.js"></script>
    <script src="~/Assets/Public/js/discussion.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>

    <script type="x-tmpl-mustache" id="comment_template">
        <li class="comment">
            <img class="discussion__avatar"
                 src={{Photo}}
                 alt="Profile Picture">
            <div class="comment__detail">
                <div>
                    <a href="#">{{UserName}}</a>
                    <i class="far fa-clock">
                        <span>{{CreateDate}}</span>
                    </i>
                </div>
                <p>{{Text}}</p>
            </div>
            <div class="comment__footer">
                <i class="fas fa-thumbs-up comment__likes">
                    <span>{{Likes}}</span>
                </i>
                <input class="like__chk" data-type="comment" data-id="{{commentID}}"
                       type="checkbox" id="cm-{{commentID}}" onchange="Like(this)">
                <label for="cm-{{commentID}}" class="like__label">
                    <span>Like</span>
                </label>
                <span>-</span>
                <button class="reply__btn" data-id="{{commentID}}" id="cm-{{commentID}}" onclick="ShowReplyInput(this)">Reply</button>
            </div>
            <ul class="replies-{{commentID}}"></ul>
        </li>
    </script>

    <script type="x-tmpl-mustache" id="reply_template">
        <li class="comment">
            <img class="discussion__avatar"
                 src={{Photo}}
                 alt="Profile Picture">
            <div class="comment__detail">
                <div>
                    <a href="#">{{UserName}}</a>
                    <i class="far fa-clock">
                        <span>{{CreateDate}}</span>
                    </i>
                </div>
                <p>{{Text}}</p>
            </div>
            <div class="comment__footer">
                <i class="fas fa-thumbs-up comment__likes">
                    <span>{{Likes}}</span>
                </i>
                <input class="like__chk" data-type="reply" data-id="{{replyID}}"
                       type="checkbox" id="rpl-{{replyID}}" onchange="Like(this)">
                <label for="rpl-{{replyID}}" class="like__label">
                    <span>Like</span>
                </label>
                <span>-</span>
                <button class="reply__btn" data-id="{{commentID}}" id="rpl-{{replyID}}" onclick="ShowReplyInput(this)">Reply</button>
            </div>
        </li>
    </script>

    <script id="global_variables" type="text/javascript">
        var userPhoto = '@Model.Info.PhotoURL';
        var userId = '@Model.Info.ID';
        var challengeId = '@Model.challenge.ID';
        var userName = '@Model.Info.UserName';
    </script>

}


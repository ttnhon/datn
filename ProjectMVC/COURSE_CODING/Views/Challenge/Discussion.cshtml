@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.js"></script>
    <script src="~/Assets/Public/js/discussion.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>

    <script type="x-tmpl-mustache" id="comment_template">
        <li class="comment">
            <img class="discussion__avatar"
                 src={{Photo}}
                 alt="Profile Picture"
                 onerror="this.src='http://www.iconninja.com/files/155/832/15/business-human-seo-person-user-account-profile-icon.svg'">
            <div class="comment__detail">
                <div>
                    <a href="#">{{UserName}}</a>
                    <i class="far fa-clock">
                        <span>{{CreateDate}}</span>
                    </i>
                </div>
                <p>{{Text}}</p>
            </div>
            <div class="comment__footer">
                <i class="fas fa-thumbs-up comment__likes">
                    <span>{{Likes}}</span>
                </i>
                <input class="like__checkbox" data-type="comment" data-id="{{commentID}}"
                       type="checkbox" id="cm-{{commentID}}" onchange="Like(this)">
                <label for="cm-{{commentID}}" class="like__label">
                    <span>Like</span>
                </label>
                <span>-</span>
                <button class="reply__btn" data-id="{{commentID}}" id="cm-{{commentID}}" onclick="ShowReplyInput(this)">Reply</button>
            </div>
            <ul class="replies" id="replies-{{commentID}}"></ul>
        </li>
    </script>

    <script type="x-tmpl-mustache" id="reply_template">
        <li class="comment">
            <img class="discussion__avatar"
                 src={{Photo}}
                 alt="Profile Picture"
                 onerror="this.src='http://www.iconninja.com/files/155/832/15/business-human-seo-person-user-account-profile-icon.svg'">
            <div class="comment__detail">
                <div>
                    <a href="#">{{UserName}}</a>
                    <i class="far fa-clock">
                        <span>{{CreateDate}}</span>
                    </i>
                </div>
                <p>{{Text}}</p>
            </div>
            <div class="comment__footer">
                <i class="fas fa-thumbs-up comment__likes">
                    <span>{{Likes}}</span>
                </i>
                <input class="like__checkbox" data-type="reply" data-id="{{replyID}}"
                       type="checkbox" id="rpl-{{replyID}}" onchange="Like(this)">
                <label for="rpl-{{replyID}}" class="like__label">
                    <span>Like</span>
                </label>
                <span>-</span>
                <button class="reply__btn" data-id="{{commentID}}" id="rpl-{{replyID}}" onclick="ShowReplyInput(this)">Reply</button>
            </div>
        </li>
    </script>

    <script id="global_variables" type="text/javascript">
        var userPhoto = '@Model.Info.PhotoURL';
        var userId = '@Model.Info.ID';
        var challengeId = '@Model.challenge.ID';
        var userName = '@Model.Info.UserName';
        var commentStatus = '@Html.Raw(Json.Encode(Model.like_status.Where(c=>c.CommentID!=null).Select(t => t.CommentID).ToList()))';
        var replyStatus = '@Html.Raw(Json.Encode(Model.like_status.Where(c=>c.ReplyID!=null).Select(t => t.ReplyID).ToList()))';
    </script>

}



@model COURSE_CODING.Models.ChallengeList

<div style="float: right;">
    <a class="btn btn-success" href="#" onclick="OpenChallengePopup()">Add Existing Challenge</a>
    <span style="margin: 0 1em;"> or </span>
    <a class="btn btn-success" href="/Moderator/CreateChallenge/@ViewBag.CompeteID">Create New Challenge</a>
</div>

<div id="" class="table-adjustable">
    <div class="table">
        <div class="row table-title no-margin">
            <div class="col-xs-1 vd-col-xs-30" style="margin-left: 1em;">
                Challenge Title
            </div>
            <div class="col-xs-1 vd-col-xs-30 text-center">
                Challenge Difficulty
            </div>
            <div class="col-xs-1 vd-col-xs-20 text-center">
                Challenge Score
            </div>
            <div class="col-xs-1 vd-col-xs-20 text-center">
                Action
            </div>
        </div>
        <div class="table-border table-cs table-body" id="challenge-list">
            @if(Model.AssignedChallenge.Count() > 0)
            {
                foreach (var challenge in Model.AssignedChallenge)
                {

            <div class="row table-row no-margin table-cs" id="c-@challenge.ID">

                <div class="col-xs-1 vd-col-xs-30" style="margin-left: 1em;">
                    <a href="/Moderator/Edit/Challenge/@challenge.ID">
                        @challenge.Title
                    </a>
                </div>
                @switch (challenge.ChallengeDifficulty)
                {
                    case 1:
                        <div class="col-xs-1 vd-col-xs-30 text-center">Easy</div>
                        break;
                    case 2:
                        <div class="col-xs-1 vd-col-xs-30 text-center">Medium</div>
                        break;
                    case 3:
                        <div class="col-xs-1 vd-col-xs-30 text-center">Hard</div>
                        break;
                    case 4:
                        <div class="col-xs-1 vd-col-xs-30 text-center">Advanced</div>
                        break;
                    case 5:
                        <div class="col-xs-1 vd-col-xs-30 text-center">Expert</div>
                        break;
                }
                <div class="col-xs-1 vd-col-xs-20 text-center">@challenge.Score</div>
                <div class="col-xs-1 vd-col-xs-20 text-center">
                    <button class="btn btn-primary" data-id="@challenge.ID" onclick="DeleteChallenge(this)">
                        Delete
                    </button>
                </div>
            </div>

                }
                        }
            else
            {
                <div id="no-content" class="row table-row no-margin table-cs">
                    <div class="col-sm-12 text-center">
                        You have not created any challenges.
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="popup" id="challenge-popup">
    <div class="popup-modal">
        <div class="popup-content challenge-popup">
            <div class="content-header">
                <h1>Add Existing Challenge</h1>
                <button class="close" onclick="CloseChallengePopup()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <hr>
            <div class="content-body">
                <div id="" class="table-adjustable">
                    <div class="table">
                        <div class="row table-title no-margin">
                            <div class="col-xs-1 vd-col-xs-40" style="margin-left: 1em;">
                                Challenge Title
                            </div>
                            <div class="col-xs-1 vd-col-xs-40 text-center">
                                Challenge Difficulty
                            </div>
                            <div class="col-xs-1 vd-col-xs-20 text-center">
                                Action
                            </div>
                        </div>
                        <div class="table-border table-cs table-body" id="challenge-list2">
                            @if (Model.UnassignedChallenge.Count() > 0)
                            {
                                foreach (var challenge in Model.UnassignedChallenge)
                                {

                                    <div class="row table-row no-margin table-cs" id="c2-@challenge.ID">

                                        <div class="col-xs-1 vd-col-xs-40" style="margin-left: 1em;">
                                            <a href="/Moderator/Edit/Challenge/@challenge.ID">
                                                @challenge.Title
                                            </a>
                                        </div>
                                        @switch (challenge.ChallengeDifficulty)
                                        {
                                            case 1:
                                                <div class="col-xs-1 vd-col-xs-40 text-center">Easy</div>
                                                break;
                                            case 2:
                                                <div class="col-xs-1 vd-col-xs-40 text-center">Medium</div>
                                                break;
                                            case 3:
                                                <div class="col-xs-1 vd-col-xs-40 text-center">Hard</div>
                                                break;
                                            case 4:
                                                <div class="col-xs-1 vd-col-xs-40 text-center">Advanced</div>
                                                break;
                                            case 5:
                                                <div class="col-xs-1 vd-col-xs-40 text-center">Expert</div>
                                                break;
                                        }
                                        <div class="col-xs-1 vd-col-xs-20 text-center">
                                            <input type="checkbox" data-id="@challenge.ID" />
                                        </div>
                                    </div>

                                }
                            }
                            else
                            {
                                <div id="no-content" class="row table-row no-margin table-cs">
                                    <div class="col-sm-12 text-center">
                                        You have not created any challenges.
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
            <div class="popup-footer">
                <button class="btn btn-primary" onclick="AddToCompete()">
                    Add To Compete
                </button>
            </div>
        </div>
    </div>
</div>

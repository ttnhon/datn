
@model IEnumerable<DAO.EF.QUESTION>

<a class="btn btn-success" href="/Moderator/CreateQuestion/@ViewBag.CompeteID" style="float: right;">Create Question</a>
<div id="" class="table-adjustable">
    
    <div class="table">
        <div class="row table-title no-margin">
            <div class="col-xs-1 vd-col-xs-40" style="margin-left: 1em;">
                Question Number
            </div>
            <div class="col-xs-1 vd-col-xs-20 text-center">
                Question Score
            </div>
            <div class="col-xs-1 vd-col-xs-20 text-center">
                Question Type
            </div>
            <div class="col-xs-1 vd-col-xs-20 text-center">
                Action
            </div>
        </div>
        <div class="table-border table-cs table-body" id="question-list">
            @if (Model.Count() > 0)
            {
                foreach (var Question in Model)
                {

                    <div class="row table-row no-margin table-cs" id="q-@Question.ID">

                        <div class="col-xs-1 vd-col-xs-40" style="margin-left: 1em;">
                            <a href="/Moderator/EditQuestion/@Question.CompeteID">Question @Question.ID</a>
                        </div>
                        <div class="col-xs-1 vd-col-xs-20 text-center">@Question.Score</div>
                        @if (Question.Type == 0)
                        {
                            <div class="col-xs-1 vd-col-xs-20 text-center">Single Choice</div>
                        }
                        else
                        {
                            <div class="col-xs-1 vd-col-xs-20 text-center">Mutiple Choice</div>
                        }
                        <div class="col-xs-1 vd-col-xs-20 text-center">
                            <button class="btn btn-primary" data-id="@Question.ID" onclick="DeleteQuestion(this)">
                                Delete
                            </button>
                        </div>
                    </div>
                }
            }
            else
            {
                <div id="no-content" class="row table-row no-margin table-cs">
                    <div class="col-sm-12 text-center">
                        You have not created any questions.
                    </div>
                </div>
            }
        </div>
    </div>
</div>
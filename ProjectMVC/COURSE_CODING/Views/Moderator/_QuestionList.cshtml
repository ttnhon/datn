
@model IEnumerable<DAO.EF.QUESTION>


<div id="" class="table-adjustable">
    <div class="table">
        <div class="row table-title no-margin">
            <div class="col-xs-1 vd-col-xs-40" style="margin-left: 5px;">
                Question Name
            </div>
            <div class="col-xs-1 vd-col-xs-30 text-center">
                Question Score
            </div>
            <div class="col-xs-1 vd-col-xs-30 text-center">
                Question Type
            </div>
        </div>
        <div class="table-border table-cs table-body">
            @if (Model.Count() > 0)
            {
                foreach (var Question in Model)
                {
                    <a href="/Moderator/EditQuestion/@Question.ID">
                        <div class="row table-row no-margin table-cs">
                            <div class="col-xs-1 vd-col-xs-40" style="margin-left: 5px;">@Question.Title</div>
                            <div class="col-xs-1 vd-col-xs-30 text-center">@Question.Score</div>
                            @if (Question.Type == 0)
                            {
                                <div class="col-xs-1 vd-col-xs-30 text-center">Single Choice</div>
                            }
                            else
                            {
                                <div class="col-xs-1 vd-col-xs-30 text-center">Mutiple Choice</div>
                            }

                        </div>
                    </a>
                }
            }
            else
            {
                <div id="no-content" class="row table-row no-margin table-cs">
                    <div class="col-sm-12 text-center">
                        You have not created any questions.
                    </div>
                </div>
            }
        </div>
    </div>
</div>
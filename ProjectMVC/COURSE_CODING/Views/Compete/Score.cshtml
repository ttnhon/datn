
@{
    ViewBag.Title = "Score";
    Layout = "~/Views/Shared/_User_Layout.cshtml";
}

@if (ViewBag.CanAccess == false)
{
    <div style="text-align: center;margin: 0 auto; padding: 30px;">
        <h2>You don't have permission to view this page</h2>
        <h2>405!</h2>
    </div>
    return;
}

@section CustomCSS
{
    @Styles.Render("~/Assets/Public/css/score.css")
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
}

<section class="header-page">
    <div class="container">
        <div class="row">
            <div class="col-6 domain-header">
                <p class="sub-contest-title">Compete Score Report</p>
                <h3 class="contest-title">@ViewBag.Title</h3>
            </div>

            <div class="col-6">

            </div>
        </div>
    </div>
</section>
<section class="content-page">
    <div class="container">
        <div class="row">
            <!--Contest list-->
            <div class="col-9 user-list-score">
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <!--1 user-->
                        <div class="one-user-box">
                            <div class="row">
                                <div class="col-md-7 user-info">
                                    <img class="profile-img" src="@item.PhotoUrl" alt=""/>
                                    <span class="card-title">@item.Name</span>
                                </div>
                                
                                <div class="col-md-5 total-score">
                                    <span><strong>Total Score: </strong><i class="score">@(item.ScoreQuestion + item.ScoreChallenge)/@item.TotalScore</i></span>
                                </div>
                            </div>
                            <div class="user-score">
                                <hr>
                                <h5><strong>Submission info</strong></h5>
                                <div class="row score-info">
                                    <div class="col-md-6">
                                        <span class="info-title">Questions: </span><span class="Numbber"><span class="quantity">@item.QuestionDone</span>/<span class="max">@item.QuestionNumber</span></span>
                                    </div>
                                    <div class="col-md-6">
                                        <span class="info-title">Questions score: </span><span class="score">@item.ScoreQuestion</span>
                                    </div>
                                    <div class="col-md-6">
                                        <span class="info-title">Challenges: </span><span class="Numbber"><span class="quantity">@item.ChallengeDone</span>/<span class="max">@item.ChallengeNumber</span></span>
                                    </div>
                                    <div class="col-md-6">
                                        <span class="info-title">Challenges score: </span><span class="score">@item.ScoreChallenge</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                }
            </div>

            <!--filter-->
            <div class="col-3 contest-filter">
                @*<div class="one-filter">
                        <h6 class="label">STATUS</h6>
                        <!-- Default indeterminate -->
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="status_unjoined" name="status" checked>
                            <label class="custom-control-label" for="status_unjoined">Unjoined</label>
                        </div>
                        <!-- Default indeterminate -->
                        <div class="custom-control custom-checkbox">
